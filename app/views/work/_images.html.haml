.image
  .row
    .col-md-3
      .left_controls
        -#.load_image
        -#  = render 'work/button_load'
        -#  %br
        .select_theme
          = render 'work/button_theme_select'
          %br
        -#.select_image
        -#  = render 'work/button_select'
        -#  %br
        .modal_list_results
          = render 'work/button_list_results'
          %br

    .col-md-9
      .image_display

        .row
          .col-md-12
            %h2.up-theme{:title => "Theme name"}
              #{@selected_theme}

          .col-md-12
            %h2.up{:title => "Image file name"}
              #{@selected_image_name}

          .col-md-1
            .img-left-side
              %h3{:title => "list to previous image"}
                %i.fa.fa-angle-double-left.strong

              %button.button__results.yes{:title => "Save image diag results"}
                %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"} save
              %button.button__results.no{:title => "Clear image diag results"}
                %a{"data-remote" => "true", :format => "js", :href => "#", :title => "Clear image diag results"} clear

          .col-md-10
            .img-center{:title => "Default image"}
              %img{:alt => "Default Image", :src => 'assets/pictures/raduga5обрез.jpg', :title => "Default image",:style => "width:100%; height:100%;" }
              .indic-circ
              .img-title

          .col-md-1
            .img-right-side
              %h3{:title => "list to next image"}
                %i.fa.fa-angle-double-right

        .row
          .col-md-12
            .image_diag
              .scale
                .small_img_box
                  %img{:alt => "Default Image", :src => 'assets/pictures/Серый - середина - стандарт.jpg', :title => "Default image",:style => "width:100%; height:100%;" }
              %h2.down

