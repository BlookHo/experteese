- if @composite_results.blank?
  %table
    %tr
      -#%td.left.grey.italic
      No Diagnosys results...
      %br
- else
  %table{ :style => "table-layout: auto; title: 'All your images diags';" }
    %tr{ :style => "font-family: $helvetica; font-size: 1.5em; " }
      %th Image name
      %th Image
      -#%th user_id
      %th Harmony
      -#%th Harmony, %
      %th hue
      %th sat
      %th light
      %th date
      -#%th delta_ave_composite

    -#- @composite_results.each do |composite_diag|
    - @composite_results_paged.each do |composite_diag|
      %tr
        %td{ :style => "text-align: left;" }= composite_diag.image_name
        %td= image_tag('/assets/pictures/' + composite_diag.image_name, {:width => "53", :height =>"47", title: "Tested image"} )
        -#                                                          , :class => "opinion_image_preview ttip"
        -#%td= composite_diag.user_id
        %td{ :style => "color: rgba(122, 13, 75, 1);" }= composite_diag.hk_composite.round(2)
        -#%td= ((composite_diag.hk_composite-150)/5.0).round(2)
        %td= composite_diag.hk_hue.round(2)
        %td= composite_diag.hk_saturate.round(2)
        %td= composite_diag.hk_light.round(2)
        %td{ :style => "color: rgba(122, 13, 75, 1);" }= composite_diag.created_at.strftime('%d.%m.%y ')
        -#%td= composite_diag.delta_ave_composite


    = paginate @composite_results_paged
    -#.pagination= render 'results_list'